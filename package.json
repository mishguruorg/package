{
  "name": "@mishguru/package",
  "version": "7.1.0",
  "description": "Utils for creating, building and testing NPM packages",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "test": "npm run build && ava ./dist/**/*.spec.js",
    "lint": "./bin/lint",
    "prepublish": "npm run build",
    "postpublish": "git push origin master --tags",
    "tidy": "./bin/tidy"
  },
  "bin": {
    "pkg-precommit": "./bin/precommit",
    "pkg-build": "./bin/build",
    "pkg-clean": "./bin/clean",
    "pkg-coverage": "./bin/coverage",
    "pkg-flow": "./bin/flow",
    "pkg-lint": "./bin/lint",
    "pkg-test": "./bin/test",
    "pkg-tidy": "./bin/tidy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mishguruorg/package.git"
  },
  "author": "George Czabania <george@mish.guru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stayradiated/pkg/issues"
  },
  "homepage": "https://github.com/stayradiated/pkg#readme",
  "dependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/plugin-transform-modules-commonjs": "7.5.0",
    "@babel/plugin-transform-shorthand-properties": "7.2.0",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-flow": "7.0.0",
    "@babel/register": "7.5.5",
    "@mishguru/eslint-config": "5.8.0",
    "@mishguru/eslint-typescript-config": "5.14.1",
    "ava": "2.2.0",
    "chalk": "2.4.2",
    "file-exists": "5.0.1",
    "flow-bin": "0.104.0",
    "flow-copy-source": "2.0.7",
    "globby": "10.0.1",
    "husky": "3.0.2",
    "lint-staged": "9.2.1",
    "mkdirp": "0.5.1",
    "nyc": "14.1.1",
    "pkg-conf": "3.1.0",
    "prettier": "1.18.2",
    "read-pkg-up": "6.0.0",
    "ts-node": "8.3.0",
    "typescript": "3.5.3",
    "unwire": "6.1.0"
  },
  "devDependencies": {
    "@types/mkdirp": "0.5.2",
    "@types/node": "12.6.9",
    "@types/pkg-conf": "3.0.0",
    "@types/read-pkg-up": "6.0.0"
  },
  "release-it": {
    "scripts": {
      "beforeStart": "npm run build"
    }
  }
}
