{
  "name": "@mishguru/package",
  "version": "8.0.0",
  "description": "Utils for creating, building and testing NPM packages",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "test": "npm run build && ava ./dist/**/*.spec.js",
    "lint": "./bin/lint",
    "prepublish": "npm run build",
    "postpublish": "git push origin master --tags",
    "tidy": "./bin/tidy"
  },
  "bin": {
    "pkg-precommit": "./bin/precommit",
    "pkg-build": "./bin/build",
    "pkg-clean": "./bin/clean",
    "pkg-coverage": "./bin/coverage",
    "pkg-flow": "./bin/flow",
    "pkg-lint": "./bin/lint",
    "pkg-test": "./bin/test",
    "pkg-tidy": "./bin/tidy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mishguruorg/package.git"
  },
  "author": "George Czabania <george@mish.guru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stayradiated/pkg/issues"
  },
  "homepage": "https://github.com/stayradiated/pkg#readme",
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/plugin-transform-shorthand-properties": "7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-flow": "7.9.0",
    "@babel/register": "^7.9.0",
    "@mishguru/eslint-config": "^5.9.1",
    "eslint-utils": ">=2.0.0",
    "@mishguru/eslint-typescript-config": "5.14.1",
    "ava": "^3.8.2",
    "chalk": "4.0.0",
    "file-exists": "5.0.1",
    "flow-bin": "^0.125.1",
    "flow-copy-source": "2.0.9",
    "globby": "11.0.0",
    "husky": "^4.2.5",
    "lint-staged": "10.2.4",
    "mkdirp": "1.0.4",
    "nyc": "15.0.1",
    "pkg-conf": "3.1.0",
    "prettier": "2.0.5",
    "read-pkg-up": "7.0.1",
    "ts-node": "^8.10.1",
    "typescript": "3.9.3",
    "unwire": "6.1.0"
  },
  "devDependencies": {
    "@types/mkdirp": "1.0.0",
    "@types/node": "^14.0.4",
    "@types/pkg-conf": "3.0.0",
    "@types/read-pkg-up": "6.0.0"
  },
  "release-it": {
    "scripts": {
      "beforeStart": "npm run build"
    }
  }
}
