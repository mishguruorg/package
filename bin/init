#!/usr/bin/env bash

export SRC_PATH=${npm_package_srcPath:-src}
export DIST_PATH=${npm_package_distPath:-dist}
export TESTS_NAME=${npm_package_testsPath:-'*.spec.js'}

RESOLVE=$(dirname "$0")/resolve

BABEL=$($RESOLVE "babel-cli" "babel")
NYC=$($RESOLVE "nyc")
ESLINT=$($RESOLVE "eslint")
AVA=$($RESOLVE "ava")
FLOW=$($RESOLVE "flow-bin" "flow")
FLOW_COPY=$($RESOLVE "flow-copy-source")
