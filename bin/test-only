#!/usr/bin/env bash

export NODE_MODULES="$(cd $(dirname "$0")/$(dirname $(readlink "$0"))/../../.. && pwd)"
source $NODE_MODULES/@mishguru/package/bin/vars

function runTestHelper {
  name=$1
  if ([ -f testHelpers/$name.js ])
  then
    echo "> Running testHelpers/$name.js"
    node testHelpers/$name.js
  fi
}

function setup {
  runTestHelper 'beforeAll'
}

function teardown {
  runTestHelper 'afterAll'
}

setup
trap teardown EXIT

echo "> Starting AVA"
$AVA "$@"
