#!/usr/bin/env bash

source $(dirname "$0")/init

function runTestHelper {
  name=$1
  if ([ -f testHelpers/$name.js ])
  then
    echo "> Running testHelpers/$name.js"
    node testHelpers/$name.js
  fi
}

function setup {
  runTestHelper 'beforeAll'
}

function teardown {
  runTestHelper 'afterAll'
}

setup
trap teardown EXIT

echo "> Starting AVA"
$AVA "$@"
