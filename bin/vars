#!/usr/bin/env bash

export SRC_PATH=${npm_package_srcPath:-src}
export DIST_PATH=${npm_package_distPath:-dist}
export TESTS_NAME=${npm_package_testsPath:-'*.spec.js'}

PACKAGE=$NODE_MODULES/@mishguru/package/bin

BABEL=$NODE_MODULES/babel-cli/bin/babel.js
NYC=$NODE_MODULES/nyc/bin/nyc.js
STANDARD=$NODE_MODULES/standard/bin/cmd.js
ESLINT=$NODE_MODULES/eslint/bin/eslint.js
AVA=$NODE_MODULES/ava/cli.js
