#!/usr/bin/env bash

export NODE_MODULES="$(cd $(dirname "$0")/$(dirname $(readlink "$0"))/../../.. && pwd)"
source $NODE_MODULES/@mishguru/package/bin/vars

echo "> Running standard"
$STANDARD $SRC_PATH $TESTS_PATH

echo "> Running eslint"
exec $ESLINT \
  -c mishguru \
  "$@" \
  $SRC_PATH $TESTS_PATH
